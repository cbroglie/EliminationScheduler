<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.entryRemoveColumn {
			text-align: center;
		}

		.addEntryPanel {
			margin: 10px 0px 15px 0px;
		}

		.gwt-Button-delete {
			width: 50px;
		}
	</ui:style>

	<g:DecoratorPanel width="100%">
		<g:VerticalPanel verticalAlignment="ALIGN_TOP">
			<g:FlexTable ui:field="entriesTable" width="100%"/>
			<g:HorizontalPanel addStyleNames="{style.addEntryPanel}" width="100%">
				<g:TextBox ui:field="addEntryTextBox"/>
				<g:Button ui:field="addEntryButton">Add Entry</g:Button>
			</g:HorizontalPanel>
		</g:VerticalPanel>
	</g:DecoratorPanel>
</ui:UiBinder>
